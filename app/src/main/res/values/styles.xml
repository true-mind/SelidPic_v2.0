<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeTranslucent" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/color_empty</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <drawable name="color_empty">#00FFFFFF</drawable>

    <style name="mainBtnTextStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="mainBtnTextNameStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="fabItemTextStyle">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="fabBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|bottom</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginRight">34dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="cautionRuleItemsStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:text">"-"</item>
    </style>

    <style name="cautionRuleItemsBodyStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="cautionRuleItemsBaseStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="editTextSizeDialogStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:background">#fff</item>
        <item name="android:textColor">#000</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:textColorHint">#c3f9d9</item>
        <item name="android:textSize">15sp</item>
        <item name="android:hint">@string/mm</item>
    </style>

    <style name="textSizeDialogStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textSizeDialogUsedParaStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#5c50cd</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="sizeDialogBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="sizeDialogBtnTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="commonDialogBtnStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="camTypeMenuTextStyle">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="camTypeMenuRdoBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:button">@drawable/s_rdo_btn</item>
    </style>

    <style name="camTypeMenuCheckStyle">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/check_box</item>
    </style>

</resources>
